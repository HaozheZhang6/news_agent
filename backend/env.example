# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_DB_PASSWORD=your-database-password

# =============================================================================
# CACHE CONFIGURATION (Upstash Redis)
# =============================================================================
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here
UPSTASH_REDIS_REST_READ_ONLY_URL=https://your-redis-instance-readonly.upstash.io
UPSTASH_REDIS_REST_READ_ONLY_TOKEN=your-redis-readonly-token-here

# =============================================================================
# AI SERVICES
# =============================================================================
# GLM-4-Flash API (ZhipuAI)
ZHIPUAI_API_KEY=your-zhipuai-api-key-here

# Alpha Vantage API for news and sentiment
ALPHAVANTAGE_API_KEY=your-alphavantage-api-key-here

# OpenAI API (optional fallback)
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# VOICE SERVICES
# =============================================================================
# SenseVoice Model Path (for offline ASR)
SENSEVOICE_MODEL_PATH=/app/models/SenseVoiceSmall

# Edge-TTS Configuration
EDGE_TTS_VOICE=en-US-AriaNeural
EDGE_TTS_RATE=1.0
EDGE_TTS_PITCH=1.0

# Audio Configuration
AUDIO_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024
VAD_MODE=3
NO_SPEECH_THRESHOLD=1.0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend.vercel.app"]
CORS_CREDENTIALS=true

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# FILE STORAGE
# =============================================================================
# Audio file storage (for conversation logs)
AUDIO_STORAGE_PATH=/app/storage/audio
MAX_AUDIO_FILE_SIZE_MB=10
AUDIO_RETENTION_DAYS=30

# Log file storage
LOG_STORAGE_PATH=/app/storage/logs
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=90

# =============================================================================
# PERFORMANCE & LIMITS
# =============================================================================
# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# WebSocket configuration
MAX_WEBSOCKET_CONNECTIONS=50
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_TIMEOUT=300

# Cache configuration
CACHE_DEFAULT_TTL_SECONDS=900
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=3600

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# News API (additional sources)
NEWS_API_KEY=your-news-api-key-here

# Stock data (additional sources)
FINNHUB_API_KEY=your-finnhub-api-key-here
POLYGON_API_KEY=your-polygon-api-key-here

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry (error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id-here
MIXPANEL_TOKEN=your-mixpanel-token-here

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6379/1

# Development tools
RELOAD=true
LOG_LEVEL=DEBUG
PROFILING=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Render.com specific
RENDER=true
RENDER_EXTERNAL_URL=https://your-app.onrender.com

# Docker configuration
DOCKER_IMAGE=voice-news-agent-backend
DOCKER_TAG=latest

# Health check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30
